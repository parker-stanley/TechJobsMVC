<div class="container body-content">

    <form action="/search/result" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                if (ViewBag.searchType == null)
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
                else if (column.Key == ViewBag.searchType)
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
                else
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
            }
        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.jobs != null)
    {

        @foreach (Job job in ViewBag.jobs)
        {
            <table class="job-listing">
                <tr>
                    <th>ID</th>
                    <td>@job.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@job.Name</td>
                </tr>
                <tr>
                    <th>Employer</th>
                    <td>@job.Employer</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>@job.Location</td>
                </tr>
                <tr>
                    <th>Position Type</th>
                    <td>@job.PositionType</td>
                </tr>
                <tr>
                    <th>Skill</th>
                    <td>@job.CoreCompetency</td>
                </tr>
            </table>
        }
    }

</div>